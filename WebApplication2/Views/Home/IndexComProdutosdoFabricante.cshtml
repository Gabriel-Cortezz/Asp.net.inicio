@model WebApplication2.Models.Home

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}
<div class="panel panel-primary">
    <div class="panel-heading">
        Game Ztore
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Fabricante</th>
                </tr>
            </thead>
            <tbody style="display: flex; flex-wrap: wrap;">
                @foreach (var item in Model.fabricantes)
                {
                    <tr>
                        <td>

                            @Html.DisplayFor(modelItem => item.Nome)
                            @Html.ActionLink(" (Produtos)", "IndexComProdutosdoFabricante", "Home", new { id = item.FabricanteId, tipo = true }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Categorias</th>
                </tr>
            </thead>
            <tbody style="display: flex; flex-wrap: wrap;">
                @foreach (var item in Model.categorias)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                            @Html.ActionLink(" (Produtos)", "IndexComProdutosdoFabricante", "Home", new { id = item.CategoriaId, tipo = false }, null)

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Produtos</th>
                </tr>
            </thead>
            <tbody style="display: flex; flex-wrap: wrap;">
                @foreach (var item in Model.produtos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section ScriptPage{
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liHome').addClass("active");
        });
    </script>
}

