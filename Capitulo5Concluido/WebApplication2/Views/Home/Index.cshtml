@model WebApplication2.Models.Home

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "home";
}

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Fabricantes
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model.fabricantes)
                {
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                    @Html.ActionLink(" (Produtos)", "IndexComProdutosdoFabricante", "Home", new { id = item.FabricanteId, tipo = true }, null)
                </td>
                }
            </tr>
        </tbody>
    </table>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Categorias
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model.categorias)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                        @Html.ActionLink(" (Produtos)", "IndexComProdutosdoFabricante", "Home", new { id = item.CategoriaId, tipo = false }, null)
                    </td>
                }
            </tr>
        </tbody>
       </table>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Produtos</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.produtos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section styles{
    <link href="@Url.Content("~/content/DataTables-1.10.2/css/dataTables.bootstrap.css")" rel="stylesheet" />
}
@section ScriptPage{
    <script src="@Url.Content("~/scripts/DataTables-1.10.2/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables-1.10.2/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
          
                $('li').removeClass("active");
                $('#liHome').addClass("active");
            });

        
    </script>
    
       
}

