@model Modelo.Tabelas.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizando detalhes de uma categoria";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Dados do categora a ser removido
    </div>
    <div class="panel-body">
        @Html.Partial("~/Areas/Cadastros/Views/Categorias/_PartialDetailsContentPanel_Categoria.cshtml", Model)
    </div>
    <div class="panel-footer panel-info">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Remover Categora" class="btn btn-danger" />
            @Html.ActionLink("Retornar para a listagem", "Index", null,
                 new { @class = "btn btn-info" })}
    </div>
</div>
